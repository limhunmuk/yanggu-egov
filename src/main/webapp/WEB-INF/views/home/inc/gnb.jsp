<script>

// 모바일 메뉴 오픈 이벤트
document.querySelector('.m_menu_btn').addEventListener('click', function(){sidemenu(true);});
document.querySelector('.m_menu_close').addEventListener('click', function(){sidemenu(false);});

function sidemenu(type){
	let menubody = document.querySelector('#header .inner'),
		htmlbody = document.querySelector('.wrap');
	if (type) {
		menubody.classList.add('on');
		htmlbody.classList.add('side_on');
	} else if (!type) {
		menubody.classList.remove('on');
		htmlbody.classList.remove('side_on');
	}
}

// 대메뉴 클릭 이벤트
const buttons  = document.querySelectorAll('#header .inner .gnb > li > a');
for (const menuB of buttons)  {
	menuB.addEventListener('click', function(e){
		if (window.innerWidth >= 1400) {
			return;
		}
		e.preventDefault();
		for (const menuLink of document.querySelectorAll('#header .inner .gnb > li')) {
			menuLink.classList.remove('open');
		}
		e.target.parentNode.classList.add('open');
	});
}
</script>